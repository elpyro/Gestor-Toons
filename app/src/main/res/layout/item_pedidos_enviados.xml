<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_registro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardBackgroundColor="@color/trasparente">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_foto_producto"
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/agregar_foto" />

            <LinearLayout
                android:id="@+id/layout_principal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_referencia_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_2"
                    android:text="TextView"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_producto_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_2"
                    android:text="TextView"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView_url_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_2"
                    android:text="TextView"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/TextView_referencia_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_2"
                    android:text="TextView"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/TextView_referencia_vendedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_2"
                    android:text="TextView"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView_nombre_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:layout_weight="@integer/material_motion_duration_long_2"
                    android:gravity="center|left"
                    android:text="TextView"
                    android:textColor="@color/black" />

                                <ImageButton
                                    android:id="@+id/imageButton_eliminar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|right"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:visibility="gone"
                                    android:background="#00FFFFFF"
                                    android:foregroundGravity="right"
                                    android:gravity="right"
                                    app:srcCompat="@drawable/ic_baseline_delete_forever_24" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="X"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView"

                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBox_recibido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>