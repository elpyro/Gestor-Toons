<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".surtir.Fragment_lista_recaudos">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_total_recaudos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:text="@string/Recaudos_pendientes"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_recaudos_pendientes"
                android:layout_width="match_parent"
                android:layout_height="302dp"
                android:layout_gravity="center">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Devolucion_garantias"
                android:layout_margin="10dp"
                android:foregroundGravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="18sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_garantias"
                android:layout_width="match_parent"
                android:layout_height="210dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>